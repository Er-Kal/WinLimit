<Window
    x:Class="WinLimit.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:WinLimit.Views"
    xmlns:vm="using:WinLimit.ViewModels"
    x:DataType="vm:MainWindowViewModel"
    Title="WinLimit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="54"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>  
            </Grid.RowDefinitions>
            <Image
                Margin="16,16,16,4"
                Height="56"
                Source="avares://WinLimit/Assets/logo.png"
                />
            <StackPanel Grid.Row="1"
                Margin="20"
                DockPanel.Dock="Left"
                Orientation="Vertical">
                <!--  This is for the main content  -->
                <Button Command="{Binding ShowHomeCommand}">
                    <Image
                        Width="48"
                        Height="48"
                        Source="avares://WinLimit/Assets/home.png" />
                </Button>
                <Button Command="{Binding ShowBlockListCommand}">
                    <Image
                        Width="48"
                        Height="48"
                        Source="avares://WinLimit/Assets/block.png" />
                </Button>
                <Button Command="{Binding ShowScheduleCommand}">
                    <Image
                        Width="48"
                        Height="48"
                        Source="avares://WinLimit/Assets/calendar.png" />
                </Button>
            </StackPanel>
            <Button Grid.Row="2" Margin="20">
                <Image
                    Width="48"
                    Height="48"
                    Source="avares://WinLimit/Assets/user.png" />
            </Button>
        </Grid>
        <!-- Content Control, Shows the actual pages here: -->
        <ContentControl Name="PageContent" Padding="20" Content="{Binding CurrentPage}"/>
    </DockPanel>
</Window>
