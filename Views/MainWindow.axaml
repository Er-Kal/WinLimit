<Window
    x:Class="WinLimit.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:WinLimit.Views"
    xmlns:vm="using:WinLimit.ViewModels"
    x:DataType="vm:MainWindowViewModel"
    Title="WinLimit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <DockPanel>
        <StackPanel
            Margin="20"
            DockPanel.Dock="Left"
            Orientation="Vertical">
            <!--  This is for the main content  -->
            <Label FontSize="24">WinLimit</Label>
            <Button Command="{Binding ShowHomeCommand}">
                <Image
                    Width="48"
                    Height="48"
                    Source="avares://WinLimit/Assets/home.png" />
            </Button>
            <Button>
                <Image
                    Width="48"
                    Height="48"
                    Source="avares://WinLimit/Assets/block.png" />
            </Button>
            <Button Command="{Binding ShowScheduleCommand}">
                <Image
                    Width="48"
                    Height="48"
                    Source="avares://WinLimit/Assets/calendar.png" />
            </Button>
        </StackPanel>
        
        <!-- Content Control, Shows the actual pages here: -->
        <ContentControl Name="PageContent" Padding="20" Content="{Binding CurrentPage}"/>
    </DockPanel>
</Window>
